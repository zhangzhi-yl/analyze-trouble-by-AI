<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.system.LOGOMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_LOGO
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.PHOTO_BACKGROUND,	
		f.PHOTO_LOGIN_LOGO,	
		f.PHOTO_CODE,	
		f.PHOTO_MENU_LOGO,	
		f.NAVIGATION_NAME,	
		f.MENU_NAME,	
		f.PHOTO_LOGIN_LOGO_WIDTH,	
		f.PHOTO_LOGIN_LOGO_HEIGHT,	
		f.COPYRIGHT,	
		f.LOGO_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		PHOTO_BACKGROUND,	
		PHOTO_LOGIN_LOGO,	
		PHOTO_CODE,	
		PHOTO_MENU_LOGO,	
		NAVIGATION_NAME,	
		MENU_NAME,	
		PHOTO_LOGIN_LOGO_WIDTH,	
		PHOTO_LOGIN_LOGO_HEIGHT,	
		COPYRIGHT,	
		LOGO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PHOTO_BACKGROUND},	
		#{PHOTO_LOGIN_LOGO},	
		#{PHOTO_CODE},	
		#{PHOTO_MENU_LOGO},	
		#{NAVIGATION_NAME},	
		#{MENU_NAME},	
		#{PHOTO_LOGIN_LOGO_WIDTH},	
		#{PHOTO_LOGIN_LOGO_HEIGHT},	
		#{COPYRIGHT},	
		#{LOGO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			LOGO_ID = #{LOGO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PHOTO_BACKGROUND = #{PHOTO_BACKGROUND},
			PHOTO_LOGIN_LOGO = #{PHOTO_LOGIN_LOGO},
			PHOTO_CODE = #{PHOTO_CODE},
			PHOTO_MENU_LOGO = #{PHOTO_MENU_LOGO},
			NAVIGATION_NAME = #{NAVIGATION_NAME},
			MENU_NAME = #{MENU_NAME},
			PHOTO_LOGIN_LOGO_WIDTH = #{PHOTO_LOGIN_LOGO_WIDTH},
			PHOTO_LOGIN_LOGO_HEIGHT = #{PHOTO_LOGIN_LOGO_HEIGHT},
			COPYRIGHT = #{COPYRIGHT},
			LOGO_ID = LOGO_ID
		where 
			LOGO_ID = #{LOGO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.LOGO_ID = #{LOGO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			LOGO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>