<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdm.EQM_INSTALLMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_EQM_INSTALL
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.EQM_INSTALL_ID,	
		f.EQM_BASE_ID,	
		f.FNAME,	
		f.FSPECS,	
		f.INSTALL_POSITION,	
		f.INSTALL_DATE,	
		f.INSTALL_IMG_NO,	
		f.INSTALL_IMG_PATH,	
		f.INSTALL_CHECK_RECORD,	
		f.FCONCLUSION,	
		f.INSTALL_PERSON,	
		f.INSPECTOR,	
		f.INSTALL_DEP,	
		f.USER_DEP,	
		f.FEXTEND1,	
		f.FEXTEND2,	
		f.FEXTEND3,	
		f.FEXTEND4,	
		f.FEXTEND5
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		EQM_INSTALL_ID,	
		EQM_BASE_ID,	
		FNAME,	
		FSPECS,	
		INSTALL_POSITION,	
		INSTALL_DATE,	
		INSTALL_IMG_NO,	
		INSTALL_IMG_PATH,	
		INSTALL_CHECK_RECORD,	
		FCONCLUSION,	
		INSTALL_PERSON,	
		INSPECTOR,	
		INSTALL_DEP,	
		USER_DEP,	
		FEXTEND1,	
		FEXTEND2,	
		FEXTEND3,	
		FEXTEND4,	
		FEXTEND5
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{EQM_INSTALL_ID},	
		#{EQM_BASE_ID},	
		#{FNAME},	
		#{FSPECS},	
		#{INSTALL_POSITION},	
		#{INSTALL_DATE},	
		#{INSTALL_IMG_NO},	
		#{INSTALL_IMG_PATH},	
		#{INSTALL_CHECK_RECORD},	
		#{FCONCLUSION},	
		#{INSTALL_PERSON},	
		#{INSPECTOR},	
		#{INSTALL_DEP},	
		#{USER_DEP},	
		#{FEXTEND1},	
		#{FEXTEND2},	
		#{FEXTEND3},	
		#{FEXTEND4},	
		#{FEXTEND5}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_INSTALL_ID = #{EQM_INSTALL_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FNAME = #{FNAME},
			FSPECS = #{FSPECS},
			INSTALL_POSITION = #{INSTALL_POSITION},
			INSTALL_DATE = #{INSTALL_DATE},
			INSTALL_IMG_NO = #{INSTALL_IMG_NO},
			INSTALL_IMG_PATH = #{INSTALL_IMG_PATH},
			INSTALL_CHECK_RECORD = #{INSTALL_CHECK_RECORD},
			FCONCLUSION = #{FCONCLUSION},
			INSTALL_PERSON = #{INSTALL_PERSON},
			INSPECTOR = #{INSPECTOR},
			INSTALL_DEP = #{INSTALL_DEP},
			USER_DEP = #{USER_DEP}
		where 
			EQM_INSTALL_ID = #{EQM_INSTALL_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_INSTALL_ID = #{EQM_INSTALL_ID}
	</select>
	
	<!-- 通过设备ID获取数据 -->
	<select id="findByParentId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include> 
		from 
		<include refid="tableName"></include> f 
		where 
			f.EQM_BASE_ID = #{EQM_BASE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 通过设备基础资料ID删除信息-->
	<delete id="deleteBase" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_BASE_ID = #{EQM_BASE_ID}
	</delete>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_INSTALL_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>