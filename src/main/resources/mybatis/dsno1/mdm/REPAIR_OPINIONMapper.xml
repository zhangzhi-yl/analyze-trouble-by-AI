<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdm.REPAIR_OPINIONMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_REPAIR_OPINION
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.REPAIR_OPINION_ID,	
		f.FISSUER,	
		f.FTIME,	
		f.REPAIR_WORKORDER_ID,	
		f.FSTATE,
		f.FCONTENT
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		REPAIR_OPINION_ID,	
		FISSUER,	
		FTIME,	
		REPAIR_WORKORDER_ID,	
		FSTATE,
		FCONTENT
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{REPAIR_OPINION_ID},	
		#{FISSUER},	
		#{FTIME},	
		#{REPAIR_WORKORDER_ID},	
		#{FSTATE},
		#{FCONTENT}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			REPAIR_OPINION_ID = #{REPAIR_OPINION_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FISSUER = #{FISSUER},
			FTIME = #{FTIME},
			FSTATE = #{FSTATE},
			FCONTENT = #{FCONTENT}
		where 
			REPAIR_OPINION_ID = #{REPAIR_OPINION_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.REPAIR_OPINION_ID = #{REPAIR_OPINION_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.REPAIR_WORKORDER_ID = #{pd.REPAIR_WORKORDER_ID}
		<if test="pd.KEYWORDS!= null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and f.FISSUER LIKE '%'+ #{pd.KEYWORDS}+'%'  
		</if>
		[fhstart] order by f.FTIME DESC [fhend] 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			REPAIR_OPINION_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 查询明细总数 -->
	<select id="findCount" parameterType="pd" resultType="pd">
		select
			count(*) zs
		from 
			<include refid="tableName"></include>
		where
			REPAIR_WORKORDER_ID = #{REPAIR_WORKORDER_ID}
	</select>
	<!-- 列表 -->
	<select id="AppList" parameterType="org.yy.controller.app.AppPage" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.REPAIR_WORKORDER_ID = #{pd.REPAIR_WORKORDER_ID}
		<if test="pd.KEYWORDS!= null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and f.FISSUER LIKE '%'+ #{pd.KEYWORDS}+'%'  
		</if>
	</select>	<!-- yy356703572qq(彬耶) -->
</mapper>