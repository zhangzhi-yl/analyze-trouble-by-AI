<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdm.ACCESSORIES_PROCUREMENTMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_ACCESSORIES_PROCUREMENT
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.ACCESSORIES_PROCUREMENT_ID,	
		f.REPAIR_WORKORDER_ID,	
		f.EQM_ID,	
		f.PROCUREMENT_BILL_DATE,	
		f.PROCUREMENT_BILL_NO,	
		f.FPRIORITY,	
		f.DEMAND_ARRIVAL_DATE,	
		f.FSTATE,	
		f.FREMARK,	
		f.FCREATER,	
		f.CREATE_TIME,	
		f.FKIND,	
		f.REPAIR_TYPE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		ACCESSORIES_PROCUREMENT_ID,	
		REPAIR_WORKORDER_ID,	
		EQM_ID,	
		PROCUREMENT_BILL_DATE,	
		PROCUREMENT_BILL_NO,	
		FPRIORITY,	
		DEMAND_ARRIVAL_DATE,	
		FSTATE,	
		FREMARK,	
		FCREATER,	
		CREATE_TIME,	
		FKIND,	
		REPAIR_TYPE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ACCESSORIES_PROCUREMENT_ID},	
		#{REPAIR_WORKORDER_ID},	
		#{EQM_ID},	
		#{PROCUREMENT_BILL_DATE},	
		#{PROCUREMENT_BILL_NO},	
		#{FPRIORITY},	
		#{DEMAND_ARRIVAL_DATE},	
		#{FSTATE},	
		#{FREMARK},	
		#{FCREATER},	
		#{CREATE_TIME},	
		#{FKIND},	
		#{REPAIR_TYPE}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ACCESSORIES_PROCUREMENT_ID = #{ACCESSORIES_PROCUREMENT_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			EQM_ID = #{EQM_ID},
			PROCUREMENT_BILL_DATE = #{PROCUREMENT_BILL_DATE},
			PROCUREMENT_BILL_NO = #{PROCUREMENT_BILL_NO},
			FPRIORITY = #{FPRIORITY},
			DEMAND_ARRIVAL_DATE = #{DEMAND_ARRIVAL_DATE},
			FSTATE = #{FSTATE},
			FREMARK = #{FREMARK},
			FKIND = #{FKIND},
			REPAIR_TYPE = #{REPAIR_TYPE}
		where 
			ACCESSORIES_PROCUREMENT_ID = #{ACCESSORIES_PROCUREMENT_ID}
	</update>
	
	<!-- 状态修改为完成(根据维修报工ID) -->
	<update id="updateStateByREPAIR_WORKORDER_ID" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FSTATE = #{FSTATE}
		where 
			REPAIR_WORKORDER_ID = #{REPAIR_WORKORDER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.ACCESSORIES_PROCUREMENT_ID = #{ACCESSORIES_PROCUREMENT_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where f.REPAIR_WORKORDER_ID = #{pd.REPAIR_WORKORDER_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and f.FCREATER LIKE '%'+ #{pd.KEYWORDS}+'%' 
		</if>
		[fhstart] order by f.CREATE_TIME DESC [fhend] 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ACCESSORIES_PROCUREMENT_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 查询明细总数 -->
	<select id="findCount" parameterType="pd" resultType="pd">
		select
			count(*) zs
		from 
			<include refid="tableName"></include>
		where
			REPAIR_WORKORDER_ID = #{REPAIR_WORKORDER_ID}
	</select>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>