<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdm.EQM_CULTURE_PLANMxMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_EQM_CULTURE_PLANMX
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FCODE,
		CAST(ISNULL(f.FCODE, 0) AS INT)FCODENO,
		f.FNAME,	
		f.PARTAKE_WHETHER,	
		f.FDES,	
		f.EQM_MAINTAIN_ID,	
		f.EQM_CULTURE_PLANMX_ID,
		f.FCREATOR,	
		f.CREATE_TIME,
		f.EQM_CULTURE_PLAN_ID
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		FCODE,	
		FNAME,	
		PARTAKE_WHETHER,	
		FDES,	
		EQM_MAINTAIN_ID,	
		EQM_CULTURE_PLANMX_ID,
		FCREATOR,	
		CREATE_TIME,	
		EQM_CULTURE_PLAN_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FCODE},	
		#{FNAME},	
		#{PARTAKE_WHETHER},	
		#{FDES},	
		#{EQM_MAINTAIN_ID},	
		#{EQM_CULTURE_PLANMX_ID},
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{EQM_CULTURE_PLAN_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_CULTURE_PLANMX_ID = #{EQM_CULTURE_PLANMX_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FCODE = #{FCODE},
			FNAME = #{FNAME},
			PARTAKE_WHETHER = #{PARTAKE_WHETHER},
			FDES = #{FDES},
			EQM_MAINTAIN_ID = #{EQM_MAINTAIN_ID},
			FCREATOR = #{FCREATOR},	
		    CREATE_TIME = #{CREATE_TIME},	
			EQM_CULTURE_PLANMX_ID = EQM_CULTURE_PLANMX_ID
		where 
			EQM_CULTURE_PLANMX_ID = #{EQM_CULTURE_PLANMX_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_CULTURE_PLANMX_ID = #{EQM_CULTURE_PLANMX_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.EQM_CULTURE_PLAN_ID = #{pd.EQM_CULTURE_PLAN_ID}
		<if test="pd.KEYWORDS!= null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FCODE LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FNAME LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
		 [fhstart] order by FCODENO ASC [fhend] 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1 = 1
		<if test="EQM_CULTURE_PLAN_ID!= null and EQM_CULTURE_PLAN_ID != ''"><!-- 关键词检索 -->
			and f.EQM_CULTURE_PLAN_ID = #{EQM_CULTURE_PLAN_ID}
		</if>
		order by FCODENO ASC
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_CULTURE_PLANMX_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 查询明细总数 -->
	<select id="findCount" parameterType="pd" resultType="pd">
		select
			count(*) zs
		from 
			<include refid="tableName"></include>
		where
			EQM_CULTURE_PLAN_ID = #{EQM_CULTURE_PLAN_ID}
	</select>
	
	<!-- 通过主表主键删除数据-->
	<delete id="deletePlan" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_CULTURE_PLAN_ID = #{EQM_CULTURE_PLAN_ID}
	</delete>	<!-- YY 356703572 -->
</mapper>