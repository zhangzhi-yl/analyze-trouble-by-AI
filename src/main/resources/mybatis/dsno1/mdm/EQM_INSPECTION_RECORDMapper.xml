<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdm.EQM_INSPECTION_RECORDMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_EQM_INSPECTION_RECORD
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FBATCH,	
		f.FNAME,	
		f.FUNIT,	
		f.FFTEAM,	
		f.FDATE,	
		f.FUSER,	
		f.FDES,	
		f.FEXTEND1,	
		f.FEXTEND2,	
		f.FEXTEND3,	
		f.FCREATOR,	
		f.CREATE_TIME,
		f.EQM_INSPECTION_RECORD_ID
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		FBATCH,	
		FNAME,	
		FUNIT,	
		FFTEAM,	
		FDATE,	
		FUSER,	
		FDES,	
		FEXTEND1,	
		FEXTEND2,	
		FEXTEND3,
		FCREATOR,	
		CREATE_TIME,		
		EQM_INSPECTION_RECORD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FBATCH},	
		#{FNAME},	
		#{FUNIT},	
		#{FFTEAM},	
		#{FDATE},	
		#{FUSER},	
		#{FDES},	
		#{FEXTEND1},	
		#{FEXTEND2},	
		#{FEXTEND3},
		#{FCREATOR},	
		#{CREATE_TIME},		
		#{EQM_INSPECTION_RECORD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_INSPECTION_RECORD_ID = #{EQM_INSPECTION_RECORD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FBATCH = #{FBATCH},
			FNAME = #{FNAME},
			FUNIT = #{FUNIT},
			FFTEAM = #{FFTEAM},
			FDATE = #{FDATE},
			FUSER = #{FUSER},
			FDES = #{FDES},
			FEXTEND1 = #{FEXTEND1},
			FEXTEND2 = #{FEXTEND2},
			FEXTEND3 = #{FEXTEND3},
			FCREATOR = #{FCREATOR},	
		    CREATE_TIME = #{CREATE_TIME},	
			EQM_INSPECTION_RECORD_ID = EQM_INSPECTION_RECORD_ID
		where 
			EQM_INSPECTION_RECORD_ID = #{EQM_INSPECTION_RECORD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_INSPECTION_RECORD_ID = #{EQM_INSPECTION_RECORD_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.keywords}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.keywords}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_INSPECTION_RECORD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>