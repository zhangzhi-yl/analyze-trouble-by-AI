	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FSTAFF,	
		f.FTIME,	
		f.FOPERATE,	
		f.FTYPE,	
		f.FDES,	
		f.FEXTEND1,	
		f.FEXTEND2,	
		f.FEXTEND3,	
		f.FEXTEND4,	
		f.FEXTEND5,	
		f.FCREATOR,	
		f.CREATE_TIME,
		f.EQM_REPAIRORDMX_ID,
		f.EQM_REPAIRORD_ID
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		FSTAFF,	
		FTIME,	
		FOPERATE,	
		FTYPE,	
		FDES,	
		FEXTEND1,	
		FEXTEND2,	
		FEXTEND3,	
		FEXTEND4,	
		FEXTEND5,
		FCREATOR,	
		CREATE_TIME,	
		EQM_REPAIRORDMX_ID,
		EQM_REPAIRORD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FSTAFF},	
		#{FTIME},	
		#{FOPERATE},	
		#{FTYPE},	
		#{FDES},	
		#{FEXTEND1},	
		#{FEXTEND2},	
		#{FEXTEND3},	
		#{FEXTEND4},	
		#{FEXTEND5},
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{EQM_REPAIRORDMX_ID},
		#{EQM_REPAIRORD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_REPAIRORDMX_ID = #{EQM_REPAIRORDMX_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FSTAFF = #{FSTAFF},
			FTIME = #{FTIME},
			FOPERATE = #{FOPERATE},
			FTYPE = #{FTYPE},
			FDES = #{FDES},
			FEXTEND1 = #{FEXTEND1},
			FEXTEND2 = #{FEXTEND2},
			FEXTEND3 = #{FEXTEND3},
			FEXTEND4 = #{FEXTEND4},
			FEXTEND5 = #{FEXTEND5},
			FCREATOR = #{FCREATOR},	
		    CREATE_TIME = #{CREATE_TIME},	
			EQM_REPAIRORDMX_ID = EQM_REPAIRORDMX_ID
		where 
			EQM_REPAIRORDMX_ID = #{EQM_REPAIRORDMX_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_REPAIRORDMX_ID = #{EQM_REPAIRORDMX_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.EQM_REPAIRORD_ID = #{pd.EQM_REPAIRORD_ID}
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.keywords}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.keywords}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_REPAIRORDMX_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 查询明细总数 -->
	<select id="findCount" parameterType="pd" resultType="pd">
		select
			count(*) zs
		from 
			<include refid="tableName"></include>
		where
			EQM_REPAIRORD_ID = #{EQM_REPAIRORD_ID}
	</select>
