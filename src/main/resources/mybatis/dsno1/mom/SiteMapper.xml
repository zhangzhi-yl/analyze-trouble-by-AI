<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mom.SiteMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDM_SITE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.DM_SITE_ID,	
		f.FNAME,	
		f.FCODE,
		f.FDES
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		DM_SITE_ID,	
		FNAME,	
		FCODE,	
		FDES
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DM_SITE_ID},	
		#{FNAME},	
		#{FCODE},		
		#{FDES}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			DM_SITE_ID = #{DM_SITE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FNAME = #{FNAME},
			FCODE = #{FCODE},
			FDES = #{FDES}
		where 
			DM_SITE_ID = #{DM_SITE_ID}
	</update>
	
	<!-- 查询编号数据数量 -->
	<select id="findCountByCode" parameterType="pd" resultType="pd">
		select isnull(count(*),0) zs from 
		<include refid="tableName"></include> f 
		where f.FCODE = #{FCODE} 
		<if test="DM_SITE_ID != null and DM_SITE_ID != ''"><!-- 工厂id -->
			and f.DM_SITE_ID &lt;&gt; #{DM_SITE_ID}
		</if>
	</select>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.DM_SITE_ID = #{DM_SITE_ID}
	</select>
	
	<!-- 通过FCODE获取数据 -->
	<select id="findByFCODE" parameterType="page" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.FCODE = #{pd.FCODE}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键字 -->
			and
				(
					f.FNAME LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FCODE LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
		<if test="pd.FNAME != null and pd.FNAME != ''"><!-- 工厂名称 -->
			and
				(
					f.FNAME LIKE '%'+ #{pd.FNAME}+'%'
				)
		</if>
		<if test="pd.FCODE != null and pd.FCODE != ''"><!-- 工厂代码 -->
			and
				(
					f.FCODE LIKE '%'+ #{pd.FCODE}+'%'
				)
		</if>
		[fhstart] ORDER BY f.FCODE [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>

	<select id="listTopAll" parameterType="pd" resultType="pd">
		select * from MDM_SITE f where f.DM_SITE_ID IN (SELECT DM_SITE_ID FROM MDM_AREA)
		<if test="IDS != null and IDS != ''"><!-- 关键字 -->
			and f.DM_SITE_ID IN ${IDS}
		</if>
	</select>

	<select id="checkIDSInSite" parameterType="pd" resultType="pd">
		select f.DM_SITE_ID AS ID from MDM_SITE f where 1=1
		<if test="IDS != null and IDS != ''"><!-- 关键字 -->
			and f.DM_SITE_ID IN ${IDS}
		</if>
	</select>
	<select id="checkIDSInArea" parameterType="pd" resultType="pd">
		select f.AREA_ID AS ID from MDM_AREA f where 1=1
		<if test="IDS != null and IDS != ''"><!-- 关键字 -->
			and f.AREA_ID IN ${IDS}
		</if>

	</select>

	<!-- 通过名称获取数据 -->
	<select id="findByName" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include> f
		where
		f.FNAME = #{FNAME}
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			DM_SITE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>