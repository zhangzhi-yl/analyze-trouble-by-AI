	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		DOCUMENTTEMPLATEMX_ID,	
		FNAME,	
		FORDER,	
		FTYPE,	
		FCREATOR,	
		CREATE_TIME,	
		DOCUMENTTEMPLATEMXOPTION_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DOCUMENTTEMPLATEMX_ID},	
		#{FNAME},	
		#{FORDER},	
		#{FTYPE},	
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{DOCUMENTTEMPLATEMXOPTION_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			DOCUMENTTEMPLATEMXOPTION_ID = #{DOCUMENTTEMPLATEMXOPTION_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DOCUMENTTEMPLATEMX_ID = #{DOCUMENTTEMPLATEMX_ID},
			FNAME = #{FNAME},
			FORDER = #{FORDER},
			FTYPE = #{FTYPE},
			FCREATOR = #{FCREATOR},
			CREATE_TIME = #{CREATE_TIME},
			DOCUMENTTEMPLATEMXOPTION_ID = DOCUMENTTEMPLATEMXOPTION_ID
		where 
			DOCUMENTTEMPLATEMXOPTION_ID = #{DOCUMENTTEMPLATEMXOPTION_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.DOCUMENTTEMPLATEMXOPTION_ID = #{DOCUMENTTEMPLATEMXOPTION_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where f.DOCUMENTTEMPLATEMX_ID = #{pd.DOCUMENTTEMPLATEMX_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FNAME LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FCREATOR LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
		[fhstart] order by f.CREATE_TIME DESC [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
