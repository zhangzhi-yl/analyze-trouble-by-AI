<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.fhdb.BRdbMapper">
	
	<!--表名 -->
	<sql id="tableName">
		DB_FHDB
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		USERNAME,	
		BACKUP_TIME,	
		TABLENAME,	
		SQLPATH,	
		TYPE,	
		DBSIZE,	
		BZ,	
		FHDB_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{USERNAME},	
		#{BACKUP_TIME},	
		#{TABLENAME},	
		#{SQLPATH},	
		#{TYPE},	
		#{DBSIZE},	
		#{BZ},	
		#{FHDB_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			FHDB_ID = #{FHDB_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			BZ = #{BZ}
		where 
		FHDB_ID = #{FHDB_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			FHDB_ID = #{FHDB_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					USERNAME LIKE '%'+#{pd.keywords}+'%'
					 or 
					TABLENAME LIKE '%'+#{pd.keywords}+'%'
				)
		</if>
		<if test="pd.TYPE != null and pd.TYPE != ''"><!-- 类型 -->
			and TYPE = #{pd.TYPE} 
		</if>
		<if test="pd.lastStart!=null and pd.lastStart!=''"><!-- 开始时间检索 -->
			and BACKUP_TIME &gt;= #{pd.lastStart} 
		</if>
		<if test="pd.lastEnd!=null and pd.lastEnd!=''"><!-- 结束时间检索 -->
			and BACKUP_TIME &lt;= #{pd.lastEnd} 
		</if>
		[fhstart]order by BACKUP_TIME desc[fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			FHDB_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 更新企业微信access_token -->
	<update id="editWX" parameterType="pd">
		UPDATE WEIXIN_TOK SET TOKVALUE=#{TOKVALUE}, TIMES=#{TIMES} where KEY_ID='085c602c637d48529c52cf8de9509611'
	</update>
	<!-- 查询企业微信access_token -->
	<select id="findWXById" resultType="pd">
		SELECT KEY_ID,TOKVALUE,TIMES FROM WEIXIN_TOK where KEY_ID='085c602c637d48529c52cf8de9509611'
	</select>
	
	<!-- yy356703572qq(袁野) -->
</mapper>