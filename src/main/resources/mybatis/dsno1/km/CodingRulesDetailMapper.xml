<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.km.CodingRulesDetailMapper">

	<!--表名 -->
	<sql id="tableName">
		KM_CODINGRULESDETAIL
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.CODERULEID,
		f.DETAILTYPE,
		f.FSEQUENCE,
		f.FLENGTH,
		f.FFORMAT,
		f.SETTINGVALUE,
		f.STARTINGVALUE,
		f.TSTEP,
		f.RESETPERIOD,
		f.STREAMCODING,
		f.CODINGRULESDETAIL_ID
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		CODERULEID,
		DETAILTYPE,
		FSEQUENCE,
		FLENGTH,
		FFORMAT,
		SETTINGVALUE,
		STARTINGVALUE,
		TSTEP,
		RESETPERIOD,
		STREAMCODING,
		CODINGRULESDETAIL_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CODERULEID},
		#{DETAILTYPE},		
		#{FSEQUENCE},
		#{FLENGTH},
		#{FFORMAT},
		#{SETTINGVALUE},
		#{STARTINGVALUE},
		#{TSTEP},
		#{RESETPERIOD},
		#{STREAMCODING},
		#{CODINGRULESDETAIL_ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		CODINGRULESDETAIL_ID = #{CODINGRULESDETAIL_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		CODERULEID = #{CODERULEID},
		DETAILTYPE = #{DETAILTYPE},
		FSEQUENCE = #{FSEQUENCE},
		FLENGTH = #{FLENGTH},
		FFORMAT = #{FFORMAT},
		SETTINGVALUE = #{SETTINGVALUE},
		STARTINGVALUE = #{STARTINGVALUE},
		TSTEP = #{TSTEP},
		RESETPERIOD =
		#{RESETPERIOD},
		STREAMCODING = #{STREAMCODING},
		CODINGRULESDETAIL_ID =
		CODINGRULESDETAIL_ID
		where
		CODINGRULESDETAIL_ID =
		#{CODINGRULESDETAIL_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.CODINGRULESDETAIL_ID = #{CODINGRULESDETAIL_ID}
	</select>
	
	<select id="getDetailListByRuleID" parameterType="String" resultType="pd">
	select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
	f.CODERULEID =  #{ruleId}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 字段1 LIKE '%'+ #{pd.KEYWORDS}+'%' or 字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' -->
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
	</select>


	<!-- 列表(全部) -->
	<select id="listByIds" parameterType="String" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		1=1
		and CODINGRULESDETAIL_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
		order by f.FSEQUENCE
	</select>


	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		CODINGRULESDETAIL_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<update id="updateRulesIDByDetailID" parameterType="String">
		update KM_CODINGRULESDETAIL set CODERULEID = #{ruleID} where CODINGRULESDETAIL_ID =
		#{detailID}
	</update>
	<!-- yy356703572qq(彬耶) -->
</mapper>