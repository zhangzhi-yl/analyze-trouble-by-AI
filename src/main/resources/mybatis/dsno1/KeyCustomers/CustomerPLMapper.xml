<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.KeyCustomers.CustomerPLMapper">
	
	<!--表名 -->
	<sql id="tableName">
		CUS_CustomerPL
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.CUSTOMER_NAME,	
		f.FTYPE,	
		f.PLPERSON,	
		f.ACCEPTPERSON,	
		f.GJTASK,	
		f.PLCONTENT,	
		f.FCREATTIEM,	
		f.CustomerPL_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		CUSTOMER_NAME,	
		FTYPE,	
		PLPERSON,	
		ACCEPTPERSON,	
		GJTASK,	
		PLCONTENT,	
		FCREATTIEM,	
		CustomerPL_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CUSTOMER_NAME},	
		#{FTYPE},	
		#{PLPERSON},	
		#{ACCEPTPERSON},	
		#{GJTASK},	
		#{PLCONTENT},	
		#{FCREATTIEM},	
		#{CustomerPL_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CustomerPL_ID = #{CustomerPL_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			CUSTOMER_NAME = #{CUSTOMER_NAME},
			FTYPE = #{FTYPE},
			PLPERSON = #{PLPERSON},
			ACCEPTPERSON = #{ACCEPTPERSON},
			GJTASK = #{GJTASK},
			PLCONTENT = #{PLCONTENT},
			FCREATTIEM = #{FCREATTIEM},
			CustomerPL_ID = CustomerPL_ID
		where 
			CustomerPL_ID = #{CustomerPL_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.CustomerPL_ID = #{CustomerPL_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 and f.CUSTOMER_NAME = #{pd.FName}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					<!-- 根据需求自己加检索条件 -->
					f.PLCONTENT LIKE '%'+ #{pd.KEYWORDS}+'%'
					<!--  or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%'  -->
				
				)
		</if>
		[fhstart] order by f.FCREATTIEM desc[fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CustomerPL_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>