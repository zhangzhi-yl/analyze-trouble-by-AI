<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.trouble.SafetyAlarmMapper">
	
	<!--表名 -->
	<sql id="tableName">
		HSE_SAFETYALARM
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.TROUBLE_ID,	
		f.ALARM_PEOPLE,	
		f.ALARM_CONTENT,	
		f.ALARM_STATE,	
		f.CREATE_TIME,	
		f.FEEDBACK_CONTENT,	
		f.IS_ERROR,	
		f.SAFETYALARM_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		TROUBLE_ID,	
		ALARM_PEOPLE,	
		ALARM_CONTENT,	
		ALARM_STATE,	
		CREATE_TIME,	
		FEEDBACK_CONTENT,	
		IS_ERROR,	
		SAFETYALARM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TROUBLE_ID},	
		#{ALARM_PEOPLE},	
		#{ALARM_CONTENT},	
		#{ALARM_STATE},	
		#{CREATE_TIME},	
		#{FEEDBACK_CONTENT},	
		#{IS_ERROR},	
		#{SAFETYALARM_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SAFETYALARM_ID = #{SAFETYALARM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TROUBLE_ID = #{TROUBLE_ID},
			ALARM_PEOPLE = #{ALARM_PEOPLE},
			ALARM_CONTENT = #{ALARM_CONTENT},
			ALARM_STATE = #{ALARM_STATE},
			CREATE_TIME = #{CREATE_TIME},
			FEEDBACK_CONTENT = #{FEEDBACK_CONTENT},
			IS_ERROR = #{IS_ERROR},
			SAFETYALARM_ID = SAFETYALARM_ID
		where 
			SAFETYALARM_ID = #{SAFETYALARM_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.SAFETYALARM_ID = #{SAFETYALARM_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SAFETYALARM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>