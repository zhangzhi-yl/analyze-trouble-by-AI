<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.project.manager.PROTEAMMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PMS_PROTEAM
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FPTNAME,	
		f.FPTSTAFFID,	
		f.FPTISINNER,	
		f.FCREATOR,	
		f.FCTIME,	
		f.FLATESTMODIFY,	
		f.FMODIFYTIME,	
		f.FRF1,	
		f.FRF2,	
		f.FRF3,	
		f.EPROJECT_ID,	
		f.PROTEAM_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		FPTNAME,	
		FPTSTAFFID,	
		FPTISINNER,	
		FCREATOR,	
		FCTIME,	
		FLATESTMODIFY,	
		FMODIFYTIME,	
		FRF1,	
		FRF2,	
		FRF3,	
		EPROJECT_ID,	
		PROTEAM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FPTNAME},	
		#{FPTSTAFFID},	
		#{FPTISINNER},	
		#{FCREATOR},	
		#{FCTIME},	
		#{FLATESTMODIFY},	
		#{FMODIFYTIME},	
		#{FRF1},	
		#{FRF2},	
		#{FRF3},	
		#{EPROJECT_ID},	
		#{PROTEAM_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
		<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 1=1
			<if test="EPROJECT_ID!= null and EPROJECT_ID != ''"> <!-- 项目ID -->
			and	EPROJECT_ID = #{EPROJECT_ID}
			</if>
			<if test="PROTEAM_ID!= null and PROTEAM_ID != ''">
			and	PROTEAM_ID = #{PROTEAM_ID}
			</if>
			<if test="FPTISINNER!= null and FPTISINNER != ''"> <!-- 角色 -->
			and	FPTISINNER = #{FPTISINNER}
			</if>
		
	</delete>
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FPTNAME = #{FPTNAME},
			FPTSTAFFID = #{FPTSTAFFID},
			FPTISINNER = #{FPTISINNER},
			FCREATOR = #{FCREATOR},
			FCTIME = #{FCTIME},
			FLATESTMODIFY = #{FLATESTMODIFY},
			FMODIFYTIME = #{FMODIFYTIME},
			FRF1 = #{FRF1},
			FRF2 = #{FRF2},
			FRF3 = #{FRF3},
			EPROJECT_ID = #{EPROJECT_ID},
			PROTEAM_ID = PROTEAM_ID
		where 
			PROTEAM_ID = #{PROTEAM_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PROTEAM_ID = #{PROTEAM_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
		<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
			FPTNAME,
			FPTSTAFFID,
			FPTISINNER
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="EPROJECT_ID!= null and EPROJECT_ID != ''"><!-- 项目编号 -->
			and	EPROJECT_ID = #{EPROJECT_ID}
		</if>
		<if test="FPTISINNER!= null and FPTISINNER != ''"><!-- 项目角色 -->
			and	FPTISINNER = #{FPTISINNER}
		</if>
	</select>
	
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PROTEAM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>