<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.project.manager.NOTEMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PMS_NOTE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.NOTE_ID,	
		f.Relation1,	
		f.Relation2,	
		f.FTYPE,	
		f.Relation3,	
		f.FNOTE,	
		f.Relation4,	
		f.NOTE_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		NOTE_ID,	
		Relation1,	
		Relation2,	
		FTYPE,	
		Relation3,	
		FNOTE,	
		Relation4
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NOTE_ID},	
		#{Relation1},	
		#{Relation2},	
		#{FTYPE},	
		#{Relation3},	
		#{FNOTE},	
		#{Relation4}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			NOTE_ID = #{NOTE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			<!-- NOTE_ID = #{NOTE_ID},
			Relation1 = #{Relation1},
			
			FTYPE = #{FTYPE},
			Relation3 = #{Relation3}, -->
			FNOTE = #{FNOTE},
			Relation2 = #{Relation2},
		<!-- 	Relation4 = #{Relation4}, -->
			NOTE_ID = NOTE_ID
		where 
			NOTE_ID = #{NOTE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.NOTE_ID = #{NOTE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		
		 <choose>
          <when test="FTYPE == '技术部月度统计分析'.toString() ">
			select
			<include refid="Field"></include>
			from 
			<include refid="tableName"></include> f
			where 1=1 and FTYPE=#{FTYPE}
			<if test="Relation1 != null and Relation1 != ''">
			and Relation1=#{Relation1}
			</if>
			and DATEDIFF(month,Relation2,getdate())=0
		  </when>
		  <otherwise></otherwise>
		  </choose>
		
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			NOTE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>