<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.pp.PlanningWorkOrderMasterLockMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PP_PlanningWorkOrderMasterLock
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.DataSource,	
		f.MaterialID,	
		f.MaterialName,	
		f.MaterialCode,	
		f.SProp,	
		f.LockCount,	
		f.ConsumptionDocumentID,	
		f.LockOprator,	
		f.LockTime,	
		f.PlanningWorkOrderMasterLock_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		DataSource,	
		MaterialID,	
		MaterialName,	
		MaterialCode,	
		SProp,	
		LockCount,	
		ConsumptionDocumentID,	
		LockOprator,	
		LockTime,	
		PlanningWorkOrderMasterLock_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DataSource},	
		#{MaterialID},	
		#{MaterialName},	
		#{MaterialCode},	
		#{SProp},	
		#{LockCount},	
		#{ConsumptionDocumentID},	
		#{LockOprator},	
		#{LockTime},	
		#{PlanningWorkOrderMasterLock_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PlanningWorkOrderMasterLock_ID = #{PlanningWorkOrderMasterLock_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DataSource = #{DataSource},
			MaterialID = #{MaterialID},
			MaterialName = #{MaterialName},
			MaterialCode = #{MaterialCode},
			SProp = #{SProp},
			LockCount = #{LockCount},
			ConsumptionDocumentID = #{ConsumptionDocumentID},
			LockOprator = #{LockOprator},
			LockTime = #{LockTime},
			PlanningWorkOrderMasterLock_ID = PlanningWorkOrderMasterLock_ID
		where 
			PlanningWorkOrderMasterLock_ID = #{PlanningWorkOrderMasterLock_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PlanningWorkOrderMasterLock_ID = #{PlanningWorkOrderMasterLock_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 
		<if test="DataSource != '' and DataSource != null">
		 and DataSource = #{DataSource}
		</if>
		<if test="ConsumptionDocumentID != '' and ConsumptionDocumentID != null">
		 and ConsumptionDocumentID = #{ConsumptionDocumentID}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PlanningWorkOrderMasterLock_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<select id="getLockNumByMaterialId"  parameterType="pd" resultType="java.lang.Integer">
		select sum(CONVERT(integer,LockCount)) as count from <include refid="tableName"></include> 
		where 1=1 
		and MaterialID = #{MaterialID}
		<if test="DataSource != '' and DataSource != null">
		 and DataSource = #{DataSource}
		</if>
		<if test="ConsumptionDocumentID != '' and ConsumptionDocumentID != null">
		 and ConsumptionDocumentID = #{ConsumptionDocumentID}
		</if>
	</select>
	<!-- yy356703572qq(彬耶) -->
</mapper>