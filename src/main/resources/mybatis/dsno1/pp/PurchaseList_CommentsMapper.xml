<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.pp.PurchaseList_CommentsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PP_PurchaseList_Comments
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.BillID,	
		f.FStatus,	
		f.FOperator,	
		f.OperationTime,	
		f.FComments,	
		f.PurchaseList_Comments_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		BillID,	
		FStatus,	
		FOperator,	
		OperationTime,	
		FComments,	
		PurchaseList_Comments_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{BillID},	
		#{FStatus},	
		#{FOperator},	
		#{OperationTime},	
		#{FComments},	
		#{PurchaseList_Comments_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PurchaseList_Comments_ID = #{PurchaseList_Comments_ID}
	</delete>
	
	<!-- 根据单据id删除-->
	<delete id="deleteByBillID" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			BillID = #{BillID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			BillID = #{BillID},
			FStatus = #{FStatus},
			FOperator = #{FOperator},
			OperationTime = #{OperationTime},
			FComments = #{FComments},
			PurchaseList_Comments_ID = PurchaseList_Comments_ID
		where 
			PurchaseList_Comments_ID = #{PurchaseList_Comments_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		f6.NAME OperatorName,<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		left join OA_STAFF f6 on f.FOperator=f6.STAFF_ID
		where 
			f.PurchaseList_Comments_ID = #{PurchaseList_Comments_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		f6.NAME OperatorName,<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		left join OA_STAFF f6 on f.FOperator=f6.STAFF_ID
		where f.BillID=#{BillID} 
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FOperator LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FComments LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		f6.NAME OperatorName,<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		left join OA_STAFF f6 on f.FOperator=f6.STAFF_ID
		where f.BillID=#{BillID} 
		<if test="KEYWORDS != null and KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FOperator LIKE '%'+ #{KEYWORDS}+'%'
					 or 
					f.FComments LIKE '%'+ #{KEYWORDS}+'%' 
				)
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PurchaseList_Comments_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>