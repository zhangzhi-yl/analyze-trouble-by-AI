<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.flow.NEW_BOMMapper">
	
	<!--表名 -->
	<sql id="tableName">
		AT_NEW_BOM_FLOW
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.NODE_ID,	
		f.NODE_NAME,	
		f.NODE_KIND,	
		f.NODE_TYPE,	
		f.PHASE_TYPE,	
		f.JUMP_CONDITION,	
		f.BEGIN_NODE,	
		f.END_NODE,	
		f.FPARTICIPATOR,	
		f.FCREATOR,	
		f.CREATE_TIME,	
		f.LAST_MODIFIER,	
		f.LAST_MODIFIED_TIME,	
		f.FDES,	
		f.ProductionBOM_ID,
		f.NEW_BOM_FLOW_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		NODE_ID,	
		NODE_NAME,	
		NODE_KIND,	
		NODE_TYPE,	
		PHASE_TYPE,	
		JUMP_CONDITION,	
		BEGIN_NODE,	
		END_NODE,	
		FPARTICIPATOR,	
		FCREATOR,	
		CREATE_TIME,	
		LAST_MODIFIER,	
		LAST_MODIFIED_TIME,	
		FDES,	
		ProductionBOM_ID,
		NEW_BOM_FLOW_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NODE_ID},	
		#{NODE_NAME},	
		#{NODE_KIND},	
		#{NODE_TYPE},	
		#{PHASE_TYPE},	
		#{JUMP_CONDITION},	
		#{BEGIN_NODE},	
		#{END_NODE},	
		#{FPARTICIPATOR},	
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{LAST_MODIFIER},	
		#{LAST_MODIFIED_TIME},	
		#{FDES},	
		#{ProductionBOM_ID},
		#{NEW_BOM_FLOW_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			NEW_BOM_ID = #{NEW_BOM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NODE_ID = #{NODE_ID},
			NODE_NAME = #{NODE_NAME},
			NODE_KIND = #{NODE_KIND},
			NODE_TYPE = #{NODE_TYPE},
			PHASE_TYPE = #{PHASE_TYPE},
			JUMP_CONDITION = #{JUMP_CONDITION},
			BEGIN_NODE = #{BEGIN_NODE},
			END_NODE = #{END_NODE},
			FPARTICIPATOR = #{FPARTICIPATOR},
			FCREATOR = #{FCREATOR},
			CREATE_TIME = #{CREATE_TIME},
			LAST_MODIFIER = #{LAST_MODIFIER},
			LAST_MODIFIED_TIME = #{LAST_MODIFIED_TIME},
			FDES = #{FDES},
			ProductionBOM_ID=#{ProductionBOM_ID}
		where 
			NEW_BOM_FLOW_ID = #{NEW_BOM_FLOW_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.NEW_BOM_FLOW_ID = #{NEW_BOM_FLOW_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 
			<if test="ProductionBOM_ID != null and ProductionBOM_ID != ''">
			and f.ProductionBOM_ID=#{ProductionBOM_ID}
			</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			NEW_BOM_FLOW_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
		<!-- 删除实例生产BOM流程列表 -->
	<delete id="deleteByBomId" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		ProductionBOM_ID = #{ProductionBOM_ID}
	</delete>
	<!-- yy356703572qq(彬耶) -->
</mapper>