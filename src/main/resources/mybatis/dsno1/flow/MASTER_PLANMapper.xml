<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.flow.MASTER_PLANMapper">

	<!--表名 -->
	<sql id="tableName">
		AT_MASTER_PLAN_FLOW
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.NODE_ID,
		f.NODE_NAME,
		f.NODE_KIND,
		f.NODE_TYPE,
		f.PHASE_TYPE,
		f.JUMP_CONDITION,
		f.BEGIN_NODE,
		f.END_NODE,
		f.FCREATOR,
		f.CREATE_TIME,
		f.LAST_MODIFIER,
		f.LAST_MODIFIED_TIME,
		f.FDES,
		f.MASTERPLAN_ID,
		f.EXECUTE_STATE,
		f.MASTER_PLAN_FLOW_ID
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		NODE_ID,
		NODE_NAME,
		NODE_KIND,
		NODE_TYPE,
		PHASE_TYPE,
		JUMP_CONDITION,
		BEGIN_NODE,
		END_NODE,
		FCREATOR,
		CREATE_TIME,
		LAST_MODIFIER,
		LAST_MODIFIED_TIME,
		FDES,
		MASTERPLAN_ID,
		EXECUTE_STATE,
		MASTER_PLAN_FLOW_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NODE_ID},
		#{NODE_NAME},
		#{NODE_KIND},
		#{NODE_TYPE},
		#{PHASE_TYPE},
		#{JUMP_CONDITION},
		#{BEGIN_NODE},
		#{END_NODE},
		#{FCREATOR},
		#{CREATE_TIME},
		#{LAST_MODIFIER},
		#{LAST_MODIFIED_TIME},
		#{FDES},
		#{MASTERPLAN_ID},
		#{EXECUTE_STATE},
		#{MASTER_PLAN_FLOW_ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		MASTER_PLAN_FLOW_ID = #{MASTER_PLAN_FLOW_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		NODE_ID = #{NODE_ID},
		NODE_NAME = #{NODE_NAME},
		NODE_KIND = #{NODE_KIND},
		NODE_TYPE = #{NODE_TYPE},
		PHASE_TYPE = #{PHASE_TYPE},
		JUMP_CONDITION = #{JUMP_CONDITION},
		BEGIN_NODE = #{BEGIN_NODE},
		END_NODE = #{END_NODE},
		FCREATOR = #{FCREATOR},
		CREATE_TIME = #{CREATE_TIME},
		LAST_MODIFIER = #{LAST_MODIFIER},
		LAST_MODIFIED_TIME = #{LAST_MODIFIED_TIME},
		FDES = #{FDES},
		MASTERPLAN_ID = #{MASTERPLAN_ID},
		EXECUTE_STATE = #{EXECUTE_STATE},
		MASTER_PLAN_FLOW_ID = MASTER_PLAN_FLOW_ID
		where
		MASTER_PLAN_FLOW_ID = #{MASTER_PLAN_FLOW_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.MASTER_PLAN_FLOW_ID = #{MASTER_PLAN_FLOW_ID}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 字段1 LIKE '%'+ #{pd.KEYWORDS}+'%' or 字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' -->
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f where 1=1
		<if test="NODE_ID != null and NODE_ID != ''"><!-- 节点id -->
			and f.NODE_ID = #{NODE_ID}
		</if>
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		MASTER_PLAN_FLOW_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<select id="findByProcessRoute_ID" parameterType="pd"
		resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.MASTERPLAN_ID = #{MASTERPLAN_ID}
		<if test="NODE_KIND != null and NODE_KIND != ''"><!-- 类型（node/line） -->
			and f.NODE_KIND = #{NODE_KIND}
		</if>
		<if test="NODE_ID != null and NODE_ID != ''"><!-- 节点id -->
			and f.NODE_ID = #{NODE_ID}
		</if>
	</select>
	<delete id="deleteByMasterPlanIdAndNodeId" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 1=1
		and MASTERPLAN_ID = #{MASTERPLAN_ID}
		and NODE_ID = #{NODE_ID}
	</delete>
	<update id="rename" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		NODE_NAME = #{NODE_NAME}
		where
		MASTER_PLAN_FLOW_ID = #{MASTER_PLAN_FLOW_ID}
	</update>
	<!-- yy356703572qq(彬耶) -->
</mapper>