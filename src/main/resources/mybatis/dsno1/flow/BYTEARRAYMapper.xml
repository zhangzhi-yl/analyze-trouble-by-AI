<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.flow.BYTEARRAYMapper">
	
	<!--表名 -->
	<sql id="tableName">
		AT_GE_BYTEARRAY_FLOW
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.PID,	
		f.FTYPE,	
		f.RESOURCE_FILE_NAME,	
		f.TEXT_BYTE_STREAM,	
		f.LAST_MODIFIED_TIME,	
		f.LAST_MODIFIER,	
		f.GE_BYTEARRAY_FLOW_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		PID,	
		FTYPE,	
		RESOURCE_FILE_NAME,	
		TEXT_BYTE_STREAM,	
		LAST_MODIFIED_TIME,	
		LAST_MODIFIER,	
		GE_BYTEARRAY_FLOW_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PID},	
		#{FTYPE},	
		#{RESOURCE_FILE_NAME},	
		#{TEXT_BYTE_STREAM},	
		#{LAST_MODIFIED_TIME},	
		#{LAST_MODIFIER},	
		#{GE_BYTEARRAY_FLOW_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			GE_BYTEARRAY_FLOW_ID = #{GE_BYTEARRAY_FLOW_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PID = #{PID},
			FTYPE = #{FTYPE},
			RESOURCE_FILE_NAME = #{RESOURCE_FILE_NAME},
			TEXT_BYTE_STREAM = #{TEXT_BYTE_STREAM},
			LAST_MODIFIED_TIME = #{LAST_MODIFIED_TIME},
			LAST_MODIFIER = #{LAST_MODIFIER}
		where 
			GE_BYTEARRAY_FLOW_ID = #{GE_BYTEARRAY_FLOW_ID}
	</update>
	
	<!-- 修改JSON -->
	<update id="editJson" parameterType="pd">
		update 
		<include refid="tableName"></include>
		set 
			TEXT_BYTE_STREAM = #{TEXT_BYTE_STREAM} 
		where 
			PID = #{PID}
	</update>
	
	<!-- 根据pid删除-->
	<delete id="deleteByPidAndFTYPE" parameterType="pd">
		delete from 
		<include refid="tableName"></include>
		where 
			PID = #{PID}
			and FTYPE = #{FTYPE}
	</delete>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.GE_BYTEARRAY_FLOW_ID = #{GE_BYTEARRAY_FLOW_ID}
	</select>
	
	<!-- 通过PID获取数据 -->
	<select id="findByPID" parameterType="pd" resultType="pd">
		select TOP 1 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		where 
			f.PID = #{PID} 
		<if test="FTYPE != null and FTYPE != ''"><!-- 类型（工艺路线、生产BOM、计划） -->
			and f.FTYPE = #{FTYPE}
		</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			GE_BYTEARRAY_FLOW_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
		<!-- 删除流程图文件 -->
	<delete id="deleteByBomId" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		PID = #{PID} 
	</delete>
	<!-- yy356703572qq(彬耶) -->
</mapper>