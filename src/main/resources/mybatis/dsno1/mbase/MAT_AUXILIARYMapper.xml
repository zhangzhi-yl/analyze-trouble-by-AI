<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mbase.MAT_AUXILIARYMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MBASE_MAT_AUXILIARY
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.MAT_AUXILIARY_ID,	
		f.MAT_AUXILIARY_CODE,	
		f.MAT_AUXILIARY_NAME
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		MAT_AUXILIARY_ID,	
		MAT_AUXILIARY_CODE,	
		MAT_AUXILIARY_NAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MAT_AUXILIARY_ID},	
		#{MAT_AUXILIARY_CODE},	
		#{MAT_AUXILIARY_NAME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_AUXILIARY_ID = #{MAT_AUXILIARY_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MAT_AUXILIARY_CODE = #{MAT_AUXILIARY_CODE},
			MAT_AUXILIARY_NAME = #{MAT_AUXILIARY_NAME}
		where 
			MAT_AUXILIARY_ID = #{MAT_AUXILIARY_ID}
	</update>
	
	<!-- 查询编号数据数量 -->
	<select id="findCountByCode" parameterType="pd" resultType="pd">
		select isnull(count(*),0) zs from 
		<include refid="tableName"></include> f 
		where f.MAT_AUXILIARY_CODE = #{MAT_AUXILIARY_CODE} 
		<if test="MAT_AUXILIARY_ID != null and MAT_AUXILIARY_ID != ''"><!-- 辅助属性id -->
			and f.MAT_AUXILIARY_ID &lt;&gt; #{MAT_AUXILIARY_ID}
		</if>
	</select>
	
	<!-- 通过辅助属性名称获取数据 -->
	<select id="findByMAT_AUXILIARY_NAME" parameterType="pd" resultType="pd">
		SELECT top 1 
		<include refid="Field"></include> 
		FROM 
		<include refid="tableName"></include> f 
		WHERE f.MAT_AUXILIARY_NAME=#{MAT_AUXILIARY_NAME}
	</select>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MAT_AUXILIARY_ID = #{MAT_AUXILIARY_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.MAT_AUXILIARY_CODE LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.MAT_AUXILIARY_NAME LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
		<if test="pd.MAT_AUXILIARY_CODE != null and pd.MAT_AUXILIARY_CODE != ''"><!-- 代码 -->
			and f.MAT_AUXILIARY_CODE = #{pd.MAT_AUXILIARY_CODE}
		</if>
		<if test="pd.MAT_AUXILIARY_NAME != null and pd.MAT_AUXILIARY_NAME != ''"><!-- 名字 -->
			and f.MAT_AUXILIARY_NAME = #{pd.MAT_AUXILIARY_NAME}
		</if>
		[fhstart] order by f.MAT_AUXILIARY_CODE [fhend] 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		where 1=1  
		<if test="KEYWORDS != null and KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.MAT_AUXILIARY_CODE LIKE '%'+ #{KEYWORDS}+'%'
					 or 
					f.MAT_AUXILIARY_NAME LIKE '%'+ #{KEYWORDS}+'%' 
				)
		</if>
		<if test="MAT_AUXILIARY_CODE != null and MAT_AUXILIARY_CODE != ''"><!-- 代码 -->
			and f.MAT_AUXILIARY_CODE = #{MAT_AUXILIARY_CODE}
		</if>
		<if test="MAT_AUXILIARY_NAME != null and MAT_AUXILIARY_NAME != ''"><!-- 名字 -->
			and f.MAT_AUXILIARY_NAME = #{MAT_AUXILIARY_NAME}
		</if>
		 order by f.MAT_AUXILIARY_CODE  
	</select>
	
	<!-- top100列表  @param KEYWORDS、MAT_AUXILIARY_CODE、MAT_AUXILIARY_NAME 代码、名称模糊搜索-->
	<select id="getAuxliaryList" parameterType="pd" resultType="pd">
		select 
		top 100 <include refid="Field"></include>
		from 
		<include refid="tableName"></include> f 
		where 1=1 
		<if test="KEYWORDS != null and KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.MAT_AUXILIARY_CODE LIKE '%'+ #{KEYWORDS}+'%'
					 or 
					f.MAT_AUXILIARY_NAME LIKE '%'+ #{KEYWORDS}+'%' 
				)
		</if>
		<if test="MAT_AUXILIARY_CODE != null and MAT_AUXILIARY_CODE != ''"><!-- 代码 -->
			and f.MAT_AUXILIARY_CODE = #{MAT_AUXILIARY_CODE}
		</if>
		<if test="MAT_AUXILIARY_NAME != null and MAT_AUXILIARY_NAME != ''"><!-- 名字 -->
			and f.MAT_AUXILIARY_NAME = #{MAT_AUXILIARY_NAME}
		</if>
		 order by f.MAT_AUXILIARY_CODE  
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_AUXILIARY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>