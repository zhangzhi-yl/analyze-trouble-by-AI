<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mbase.QUARTZ_TASKMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MBASE_QUARTZ_TASK
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.QUARTZ_TASK_ID,	
		f.JOBNAME,	
		f.CREATE_TIME,	
		f.TABLENAME,	
		f.STATUS,	
		f.FHTIME,	
		f.TIMEEXPLAIN,	
		f.BZ,	
		f.METHODNAME,	
		f.EXECUTE_ARGS
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		QUARTZ_TASK_ID,	
		JOBNAME,	
		CREATE_TIME,	
		TABLENAME,	
		STATUS,	
		FHTIME,	
		TIMEEXPLAIN,	
		BZ,	
		METHODNAME,	
		EXECUTE_ARGS
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{QUARTZ_TASK_ID},	
		#{JOBNAME},	
		#{CREATE_TIME},	
		#{TABLENAME},	
		#{STATUS},	
		#{FHTIME},	
		#{TIMEEXPLAIN},	
		#{BZ},	
		#{METHODNAME},	
		#{EXECUTE_ARGS}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			QUARTZ_TASK_ID = #{QUARTZ_TASK_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			JOBNAME = #{JOBNAME},
			CREATE_TIME = #{CREATE_TIME},
			TABLENAME = #{TABLENAME},
			STATUS = #{STATUS},
			FHTIME = #{FHTIME},
			TIMEEXPLAIN = #{TIMEEXPLAIN},
			BZ = #{BZ},
			METHODNAME = #{METHODNAME},
			EXECUTE_ARGS = #{EXECUTE_ARGS}
		where 
			QUARTZ_TASK_ID = #{QUARTZ_TASK_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.QUARTZ_TASK_ID = #{QUARTZ_TASK_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and JOBNAME LIKE '%'+ #{pd.KEYWORDS}+'%' 
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			QUARTZ_TASK_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 切换状态 -->
	<update id="changeStatus" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			STATUS = #{STATUS}
		where 
		QUARTZ_TASK_ID = #{QUARTZ_TASK_ID}
	</update>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>