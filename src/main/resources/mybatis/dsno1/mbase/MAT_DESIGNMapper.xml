<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mbase.MAT_DESIGNMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MBASE_MAT_DESIGN
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.MAT_BASIC_ID,	
		f.PRODUCT_DESIGNER,	
		f.DRAWING_NUMBER,	
		f.CRITICAL_PARTS_WHETHER,	
		f.ROUGH_WEIGHT,	
		f.NET_WEIGHT,	
		f.WEIGHT_UNIT,	
		f.FLENGTH,	
		f.FWIDTH,	
		f.FHEIGHT,	
		f.FVOLUME,	
		f.LENGTH_UNIT,	
		f.FVERSIONS,	
		f.FEXTEND1,	
		f.FEXTEND2,	
		f.FEXTEND3,	
		f.FEXTEND4,	
		f.FEXTEND5,	
		f.FCREATOR,	
		f.CREATE_TIME,	
		f.MAT_DESIGN_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		MAT_BASIC_ID,	
		PRODUCT_DESIGNER,	
		DRAWING_NUMBER,	
		CRITICAL_PARTS_WHETHER,	
		ROUGH_WEIGHT,	
		NET_WEIGHT,	
		WEIGHT_UNIT,	
		FLENGTH,	
		FWIDTH,	
		FHEIGHT,	
		FVOLUME,	
		LENGTH_UNIT,	
		FVERSIONS,	
		FEXTEND1,	
		FEXTEND2,	
		FEXTEND3,	
		FEXTEND4,	
		FEXTEND5,	
		FCREATOR,	
		CREATE_TIME,	
		MAT_DESIGN_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MAT_BASIC_ID},	
		#{PRODUCT_DESIGNER},	
		#{DRAWING_NUMBER},	
		#{CRITICAL_PARTS_WHETHER},	
		#{ROUGH_WEIGHT},	
		#{NET_WEIGHT},	
		#{WEIGHT_UNIT},	
		#{FLENGTH},	
		#{FWIDTH},	
		#{FHEIGHT},	
		#{FVOLUME},	
		#{LENGTH_UNIT},	
		#{FVERSIONS},	
		#{FEXTEND1},	
		#{FEXTEND2},	
		#{FEXTEND3},	
		#{FEXTEND4},	
		#{FEXTEND5},	
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{MAT_DESIGN_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_DESIGN_ID = #{MAT_DESIGN_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MAT_BASIC_ID = #{MAT_BASIC_ID},
			PRODUCT_DESIGNER = #{PRODUCT_DESIGNER},
			DRAWING_NUMBER = #{DRAWING_NUMBER},
			CRITICAL_PARTS_WHETHER = #{CRITICAL_PARTS_WHETHER},
			ROUGH_WEIGHT = #{ROUGH_WEIGHT},
			NET_WEIGHT = #{NET_WEIGHT},
			WEIGHT_UNIT = #{WEIGHT_UNIT},
			FLENGTH = #{FLENGTH},
			FWIDTH = #{FWIDTH},
			FHEIGHT = #{FHEIGHT},
			FVOLUME = #{FVOLUME},
			LENGTH_UNIT = #{LENGTH_UNIT},
			FVERSIONS = #{FVERSIONS},
			FEXTEND1 = #{FEXTEND1},
			FEXTEND2 = #{FEXTEND2},
			FEXTEND3 = #{FEXTEND3},
			FEXTEND4 = #{FEXTEND4},
			FEXTEND5 = #{FEXTEND5},
			FCREATOR = #{FCREATOR},
			CREATE_TIME = #{CREATE_TIME},
			MAT_DESIGN_ID = MAT_DESIGN_ID
		where 
			MAT_DESIGN_ID = #{MAT_DESIGN_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MAT_DESIGN_ID = #{MAT_DESIGN_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_DESIGN_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
	<!-- 通过基础资料主键删除 -->
	<delete id="deleteBasic" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_BASIC_ID = #{MAT_BASIC_ID}
	</delete>
	
	<!-- 去修改页面通过基础资料Id获取数据 -->
	<select id="findBySonId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MAT_BASIC_ID = #{MAT_BASIC_ID}
	</select>
	<!-- YY 356703572 -->
</mapper>