<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mbase.MAT_PERIODMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MBASE_MAT_PERIOD
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.MAT_BASIC_ID,	
		f.FPERIOD,	
		f.FDESCRIBE,	
		f.FSTATE,	
		f.FCreatePerson,	
		f.FCreateTime,	
		f.FPERIOD_QTY,
		f.MAT_PERIOD_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		MAT_BASIC_ID,	
		FPERIOD,	
		FDESCRIBE,	
		FSTATE,	
		FCreatePerson,	
		FCreateTime,
		FPERIOD_QTY,	
		MAT_PERIOD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MAT_BASIC_ID},	
		#{FPERIOD},	
		#{FDESCRIBE},	
		#{FSTATE},	
		#{FCreatePerson},	
		#{FCreateTime},	
		#{FPERIOD_QTY},	
		#{MAT_PERIOD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_PERIOD_ID = #{MAT_PERIOD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MAT_BASIC_ID = #{MAT_BASIC_ID},
			FPERIOD = #{FPERIOD},
			FDESCRIBE = #{FDESCRIBE},
			FSTATE = #{FSTATE},
			FCreatePerson = #{FCreatePerson},
			FCreateTime = #{FCreateTime},
			FPERIOD_QTY = #{FPERIOD_QTY},
			MAT_PERIOD_ID = MAT_PERIOD_ID
		where 
			MAT_PERIOD_ID = #{MAT_PERIOD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MAT_PERIOD_ID = #{MAT_PERIOD_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.MAT_BASIC_ID != null and pd.MAT_BASIC_ID != ''">
			and f.MAT_BASIC_ID = #{pd.MAT_BASIC_ID}
		</if>
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FDESCRIBE LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FSTATE LIKE '%'+ #{pd.KEYWORDS}+'%' 
				)
		</if>
		[fhstart] ORDER BY f.FCreateTime DESC [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MAT_PERIOD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>