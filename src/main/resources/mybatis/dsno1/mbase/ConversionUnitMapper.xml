<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mbase.ConversionUnitMapper">
	
	<!--表名 -->
	<sql id="tableName">
		KM_ConversionUnit
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.ConversionUnit_ID,	
		f.ConversionValue,	
		f.ConversionUnit,	
		f.ConvertedValue,	
		f.ConvertedUnits,	
		f.MAT_BASIC_ID,
		f.ConvertedAccuracy
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		ConversionUnit_ID,	
		ConversionValue,	
		ConversionUnit,	
		ConvertedValue,	
		ConvertedUnits,	
		MAT_BASIC_ID,
		ConvertedAccuracy
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ConversionUnit_ID},	
		#{ConversionValue},	
		#{ConversionUnit},	
		#{ConvertedValue},	
		#{ConvertedUnits},	
		#{MAT_BASIC_ID},
		#{ConvertedAccuracy}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ConversionUnit_ID = #{ConversionUnit_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			ConversionValue = #{ConversionValue},
			ConversionUnit = #{ConversionUnit},
			ConvertedValue = #{ConvertedValue},
			ConvertedUnits = #{ConvertedUnits},
			ConvertedAccuracy = #{ConvertedAccuracy}
		where 
			ConversionUnit_ID = #{ConversionUnit_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.ConversionUnit_ID = #{ConversionUnit_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
		<if test="pd.MAT_BASIC_ID != null and pd.MAT_BASIC_ID != ''">
			and f.MAT_BASIC_ID = #{pd.MAT_BASIC_ID}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>,
		g.FNAME
		from 
		<include refid="tableName"></include> f
		left join MBASE_UNIT_INFO g on f.ConvertedUnits = g.UNIT_INFO_ID
		where 1=1  
		<if test="MAT_BASIC_ID != null and MAT_BASIC_ID != ''">
			and f.MAT_BASIC_ID = #{MAT_BASIC_ID}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ConversionUnit_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>