<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.qm.O_RECORD_QUALITYTASKMapper">
	
	<!--表名 -->
	<sql id="tableName">
		QM_O_RECORD_QUALITYTASK
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.ASSOCIATED_ID,	
		f.BEGIN_TIME,	
		f.END_TIME,	
		f.OPERSON,	
		f.FDESCRIBE,	
		f.O_RECORD_QUALITYTASK_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		ASSOCIATED_ID,	
		BEGIN_TIME,	
		END_TIME,	
		OPERSON,	
		FDESCRIBE,	
		O_RECORD_QUALITYTASK_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ASSOCIATED_ID},	
		#{BEGIN_TIME},	
		#{END_TIME},	
		#{OPERSON},	
		#{FDESCRIBE},	
		#{O_RECORD_QUALITYTASK_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			O_RECORD_QUALITYTASK_ID = #{O_RECORD_QUALITYTASK_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			ASSOCIATED_ID = #{ASSOCIATED_ID},
			BEGIN_TIME = #{BEGIN_TIME},
			END_TIME = #{END_TIME},
			OPERSON = #{OPERSON},
			FDESCRIBE = #{FDESCRIBE},
			O_RECORD_QUALITYTASK_ID = O_RECORD_QUALITYTASK_ID
		where 
			O_RECORD_QUALITYTASK_ID = #{O_RECORD_QUALITYTASK_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.O_RECORD_QUALITYTASK_ID = #{O_RECORD_QUALITYTASK_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			O_RECORD_QUALITYTASK_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<select id="findByExampleID" parameterType="pd" resultType="pd">
		select top 1 * from QM_O_RECORD_QUALITYTASK where ASSOCIATED_ID=#{ASSOCIATED_ID} and BEGIN_TIME is not null and END_TIME is null
	</select>
	<update id="editEnd" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			END_TIME = #{END_TIME}
		where 
			ASSOCIATED_ID = #{ASSOCIATED_ID}
			and (END_TIME is null or END_TIME ='')
	</update>
	<!-- yy356703572qq(彬耶) -->
</mapper>