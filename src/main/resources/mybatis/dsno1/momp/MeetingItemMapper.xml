<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.momp.MeetingItemMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MOMP_MEETINGITEM
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.ACTIONPLAN,	
		f.FNO,	
		f.HEAD,	
		f.DEADLINE,	
		f.FSTATE,	
		f.MEETINGINFORMATION_ID,	
		f.MEETINGITEM_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		ACTIONPLAN,	
		FNO,	
		HEAD,	
		DEADLINE,	
		FSTATE,	
		MEETINGINFORMATION_ID,	
		MEETINGITEM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ACTIONPLAN},	
		#{FNO},	
		#{HEAD},	
		#{DEADLINE},	
		#{FSTATE},	
		#{MEETINGINFORMATION_ID},	
		#{MEETINGITEM_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MEETINGITEM_ID = #{MEETINGITEM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			ACTIONPLAN = #{ACTIONPLAN},
			FNO = #{FNO},
			HEAD = #{HEAD},
			DEADLINE = #{DEADLINE},
			FSTATE = #{FSTATE},
			MEETINGITEM_ID = MEETINGITEM_ID
		where 
			MEETINGITEM_ID = #{MEETINGITEM_ID}
	</update>
	<select id="findByFatherId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MEETINGINFORMATION_ID = #{MEETINGINFORMATION_ID}
		ORDER BY CAST (FNO AS INT) 
	</select>
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.MEETINGITEM_ID = #{MEETINGITEM_ID}
	</select>
	<delete id="deleteFather" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MEETINGINFORMATION_ID = #{MEETINGINFORMATION_ID}
	</delete>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 and f.MEETINGINFORMATION_ID=#{pd.MEETINGINFORMATION_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
		[fhstart]  order by  CAST (FNO AS INT)   [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MEETINGITEM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>