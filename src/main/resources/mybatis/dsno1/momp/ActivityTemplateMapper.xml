<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.momp.ActivityTemplateMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EPM_ACTIVITYTEMPLATE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		isnull(f.FATNAME,'') FATNAME, 
		isnull(f.FATDESCRIPTION,'') FATDESCRIPTION,
		isnull(f.FATLEVEL,'') FATLEVEL,
		isnull(f.FATREMARK,'') FATREMARK,
		isnull(f.FATISCHECK,'') FATISCHECK,
		isnull(f.FATACHECKID,'') FATACHECKID,
		isnull(f.PHASETEMPLATE_ID,'') PHASETEMPLATE_ID,
		isnull(f.PLANTEMPLATE_ID,'') PLANTEMPLATE_ID,
		isnull(f.FRF1,'') FRF1,
		isnull(f.FRF2,'') FRF2,
		isnull(f.ACTIVITYTEMPLATE_ID,'') ACTIVITYTEMPLATE_ID 
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		FATNAME,	
		FATDESCRIPTION,	
		FATLEVEL,	
		FATREMARK,	
		FATISCHECK,	
		FATACHECKID,	
		PHASETEMPLATE_ID,	
		PLANTEMPLATE_ID,	
		FRF1,	
		FRF2,	
		ACTIVITYTEMPLATE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FATNAME},	
		#{FATDESCRIPTION},	
		#{FATLEVEL},	
		#{FATREMARK},	
		#{FATISCHECK},	
		#{FATACHECKID},	
		#{PHASETEMPLATE_ID},	
		#{PLANTEMPLATE_ID},	
		#{FRF1},	
		#{FRF2},	
		#{ACTIVITYTEMPLATE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ACTIVITYTEMPLATE_ID = #{ACTIVITYTEMPLATE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FATNAME = #{FATNAME},
			FATDESCRIPTION = #{FATDESCRIPTION},
			FATLEVEL = #{FATLEVEL},
			FATREMARK = #{FATREMARK},
			FRF1 = #{FRF1},
			FRF2 = #{FRF2},
			ACTIVITYTEMPLATE_ID = ACTIVITYTEMPLATE_ID
		where 
			ACTIVITYTEMPLATE_ID = #{ACTIVITYTEMPLATE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.ACTIVITYTEMPLATE_ID = #{ACTIVITYTEMPLATE_ID}
	</select>
	
	<select id="findByFATNAME" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PHASETEMPLATE_ID = #{PHASETEMPLATE_ID}
			ORDER BY  f.FATLEVEL
	</select>
	
	<select id="listByParentId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where  f.PHASETEMPLATE_ID=#{PHASETEMPLATE_ID}
		ORDER BY  f.FATLEVEL,f.FRF1
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1  and f.PHASETEMPLATE_ID=#{pd.PHASETEMPLATE_ID}
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.keywords}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.keywords}+'%' 
				-->
				)
		</if>
		[fhstart]  ORDER BY  f.FATLEVEL  [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ACTIVITYTEMPLATE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>