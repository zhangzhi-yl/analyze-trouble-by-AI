<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.momp.PlanTemplateMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EPM_PLANTEMPLATE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
	isnull(f.FPTNAME,'') FPTNAME, 
		isnull(f.FPTDESCRIPTION,'') FPTDESCRIPTION , 
		isnull(f.FPTREMARK,'') FPTREMARK, 
		isnull(f.FRF1,'') FRF1, 
		isnull(f.FRF2,'') FRF2, 
		isnull(f.PLANTEMPLATE_ID,'') PLANTEMPLATE_ID 
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		FPTNAME,	
		FPTDESCRIPTION,	
		FPTREMARK,	
		FRF1,	
		FRF2,	
		PLANTEMPLATE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FPTNAME},	
		#{FPTDESCRIPTION},	
		#{FPTREMARK},	
		#{FRF1},	
		#{FRF2},	
		#{PLANTEMPLATE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PLANTEMPLATE_ID = #{PLANTEMPLATE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FPTNAME = #{FPTNAME},
			FPTDESCRIPTION = #{FPTDESCRIPTION},
			FPTREMARK = #{FPTREMARK},
			PLANTEMPLATE_ID = PLANTEMPLATE_ID
		where 
			PLANTEMPLATE_ID = #{PLANTEMPLATE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PLANTEMPLATE_ID = #{PLANTEMPLATE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS!= null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件-->
					f.FPTNAME LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.FPTDESCRIPTION LIKE '%'+ #{pd.KEYWORDS}+'%' 
				
				)
		</if>
		[fhstart]  ORDER BY f.FPTNAME  [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="PLANTEMPLATE_ID != null and PLANTEMPLATE_ID != ''">
			and PLANTEMPLATE_ID =#{PLANTEMPLATE_ID}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PLANTEMPLATE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>