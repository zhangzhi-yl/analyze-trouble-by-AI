<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.momp.DOUBLE_PLAN_WEEK_STATEMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EPM_DOUBLE_PLAN_WEEK_STATE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FSTATEID,	
		f.TREND_ID,	
		f.FNOTE_NOW,	
		f.DOUBLE_PLAN_WEEK_MAIN_ID,	
		f.FCREATOR,	
		f.FCTIME,	
		f.FLASTMODIFY_MAN,	
		f.FLASTMODIFY_TIME,	
		f.FNOTE_UP,	
		f.DOUBLE_PLAN_WEEK_STATE_ID,
		f.FTYPEG
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		FSTATEID,	
		TREND_ID,	
		FNOTE_NOW,	
		DOUBLE_PLAN_WEEK_MAIN_ID,	
		FCREATOR,	
		FCTIME,	
		FLASTMODIFY_MAN,	
		FLASTMODIFY_TIME,	
		FNOTE_UP,	
		DOUBLE_PLAN_WEEK_STATE_ID,
		FTYPEG
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FSTATEID},	
		#{TREND_ID},	
		#{FNOTE_NOW},	
		#{DOUBLE_PLAN_WEEK_MAIN_ID},	
		#{FCREATOR},	
		#{FCTIME},	
		#{FLASTMODIFY_MAN},	
		#{FLASTMODIFY_TIME},	
		#{FNOTE_UP},	
		#{DOUBLE_PLAN_WEEK_STATE_ID},
		#{FTYPEG}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
		1=1
		<choose>
                <when test="deleteType != null and deleteType == 'emport'.toString()">
                    and DOUBLE_PLAN_WEEK_MAIN_ID=#{DOUBLE_PLAN_WEEK_MAIN_ID}
                </when>
                <when test="deleteType != null and deleteType == 'deleteAll'.toString()">
                    and DOUBLE_PLAN_WEEK_MAIN_ID=#{DOUBLE_PLAN_WEEK_MAIN_ID}
                </when>
                <otherwise>
                	and DOUBLE_PLAN_WEEK_STATE_ID = #{DOUBLE_PLAN_WEEK_STATE_ID}
                </otherwise>
         </choose> 
	
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FSTATEID = #{FSTATEID},
			TREND_ID = #{TREND_ID},
			FNOTE_NOW = #{FNOTE_NOW},
<!-- 			DOUBLE_PLAN_WEEK_MAIN_ID = #{DOUBLE_PLAN_WEEK_MAIN_ID},
 -->			<!-- FCREATOR = #{FCREATOR},
			FCTIME = #{FCTIME}, -->
			FLASTMODIFY_MAN = #{FLASTMODIFY_MAN},
			FLASTMODIFY_TIME = #{FLASTMODIFY_TIME},
			FNOTE_UP = #{FNOTE_UP}<!-- ,
			DOUBLE_PLAN_WEEK_STATE_ID = DOUBLE_PLAN_WEEK_STATE_ID -->
		where 
			DOUBLE_PLAN_WEEK_STATE_ID = #{DOUBLE_PLAN_WEEK_STATE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.DOUBLE_PLAN_WEEK_STATE_ID = #{DOUBLE_PLAN_WEEK_STATE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>,
		isnull(f1.FTEXT,'') FSTATE_TEXT,isnull(f1.FCOLOR,'') FSTATE_COLOR,
		isnull(f2.FTEXT,'') FTREND_TEXT,isnull(f2.FURL,'') FTREND_URL
		from 
		<include refid="tableName"></include> f
		left join EPM_ICONCOLOR f1
		on f1.ICONCOLOR_ID=f.FSTATEID
		left join EPM_ICONCOLOR f2
		on f2.ICONCOLOR_ID=f.TREND_ID
		where 1=1 
		<choose>
                <when test="DOUBLE_PLAN_WEEK_MAIN_ID != null and DOUBLE_PLAN_WEEK_MAIN_ID != ''">
                    and DOUBLE_PLAN_WEEK_MAIN_ID=#{DOUBLE_PLAN_WEEK_MAIN_ID}
                </when>
                
                <otherwise>
                and 1=1
                </otherwise>
         </choose>
         ORDER BY FCTIME  DESC
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			DOUBLE_PLAN_WEEK_STATE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>