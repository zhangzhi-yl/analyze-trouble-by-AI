<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.momp.PhaseMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MOMP_PHASE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.PHASET_CODE,	
		f.PHASET_NAME,	
		f.PHASET_DES,	
		f.PHASET_EDIT,	
		f.PHASET_EXE,	
		f.PHASET_PAGEVIEW,	
		f.PHASET_INPUTJSON,	
		f.PHASET_OUTPUTJSON,	
		f.PHASET_CREATECIME,	
		f.PHASET_CREATOR,	
		f.PHASET_EDITTIME,	
		f.PHASET_EDITOR,	
		f.PHASE_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		PHASET_CODE,	
		PHASET_NAME,	
		PHASET_DES,	
		PHASET_EDIT,	
		PHASET_EXE,	
		PHASET_PAGEVIEW,	
		PHASET_INPUTJSON,	
		PHASET_OUTPUTJSON,	
		PHASET_CREATECIME,	
		PHASET_CREATOR,	
		PHASET_EDITTIME,	
		PHASET_EDITOR,	
		PHASE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PHASET_CODE},	
		#{PHASET_NAME},	
		#{PHASET_DES},	
		#{PHASET_EDIT},	
		#{PHASET_EXE},	
		#{PHASET_PAGEVIEW},	
		#{PHASET_INPUTJSON},	
		#{PHASET_OUTPUTJSON},	
		#{PHASET_CREATECIME},	
		#{PHASET_CREATOR},	
		#{PHASET_EDITTIME},	
		#{PHASET_EDITOR},	
		#{PHASE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PHASE_ID = #{PHASE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PHASET_CODE = PHASET_CODE,
			PHASET_NAME = #{PHASET_NAME},
			PHASET_DES = #{PHASET_DES},
			PHASET_EDIT = #{PHASET_EDIT},
			PHASET_EXE = #{PHASET_EXE},
			PHASET_PAGEVIEW = #{PHASET_PAGEVIEW},
			PHASET_INPUTJSON = #{PHASET_INPUTJSON},
			PHASET_OUTPUTJSON = #{PHASET_OUTPUTJSON},
			PHASET_EDITTIME = #{PHASET_EDITTIME},
			PHASET_EDITOR = #{PHASET_EDITOR},
			PHASE_ID = PHASE_ID
		where 
			PHASE_ID = #{PHASE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PHASE_ID = #{PHASE_ID}
	</select>
	
	<select id="count" parameterType="pd" resultType="pd">
			select ISNULL((max(right(PHASET_CODE,5))+1), 1) number  from MOMP_PHASE
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		order by f.PHASET_CREATECIME
	</select>
	
	<!-- 列表(全部) -->
	<select id="findbycode" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where f.PHASET_CODE=#{PHASET_CODE}
	</select>
	
	<select id="findbyBM" parameterType="pd" resultType="pd">
		select
		top 1 *
		from 
		oa_staff
		where BIANMA=#{BIANMA}
	</select>
	
	<select id="findbyPassword" parameterType="pd" resultType="pd">
		select
		*
		from 
		sys_user
		where USERNAME=#{USERNAME}
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PHASE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- YY 356703572 -->
</mapper>