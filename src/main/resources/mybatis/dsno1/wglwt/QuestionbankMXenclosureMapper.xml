<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.wglwt.QuestionbankMXenclosureMapper">
	
	<!--表名 -->
	<sql id="tableName">
		WT_QUESTIONBANKMXENCLOSURE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.QUESTIONBANKMX_ID,	
		f.NAME,	
		f.TYPE,	
		f.PATH,	
		f.QUESTIONBANKMXENCLOSURE_ID,
        f.TIME
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		QUESTIONBANKMX_ID,	
		NAME,	
		TYPE,	
		PATH,	
		QUESTIONBANKMXENCLOSURE_ID,
        TIME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{QUESTIONBANKMX_ID},	
		#{NAME},	
		#{TYPE},	
		#{PATH},	
		#{QUESTIONBANKMXENCLOSURE_ID},
		#{TIME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			QUESTIONBANKMXENCLOSURE_ID = #{QUESTIONBANKMXENCLOSURE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			QUESTIONBANKMX_ID = #{QUESTIONBANKMX_ID},
			NAME = #{NAME},
			TYPE = #{TYPE},
			PATH = #{PATH},
			QUESTIONBANKMXENCLOSURE_ID = QUESTIONBANKMXENCLOSURE_ID
		where 
			QUESTIONBANKMXENCLOSURE_ID = #{QUESTIONBANKMXENCLOSURE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.QUESTIONBANKMXENCLOSURE_ID = #{QUESTIONBANKMXENCLOSURE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1 and f.QUESTIONBANK_ID = #{pd.QUESTIONBANK_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
		[fhstart] order by f.TIME  asc [fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			QUESTIONBANKMXENCLOSURE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>