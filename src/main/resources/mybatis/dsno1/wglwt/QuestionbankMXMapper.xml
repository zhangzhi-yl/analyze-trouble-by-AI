<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.wglwt.QuestionbankMXMapper">
	
	<!--表名 -->
	<sql id="tableName">
		WT_QUESTIONBANKMX
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.QUESTIONBANK_ID,	
		f.PROBLEM_CAUSE_ANALYSIS,	
		f.DESCRIPTION_TREATMENT_METHOD,	
		f.SHANGGUAN_LIANREN,	
		f.HANDLER,	
		f.PROCESSING_TIME,	
		f.QUESTIONBANKMX_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		QUESTIONBANK_ID,	
		PROBLEM_CAUSE_ANALYSIS,	
		DESCRIPTION_TREATMENT_METHOD,	
		SHANGGUAN_LIANREN,	
		HANDLER,	
		PROCESSING_TIME,	
		QUESTIONBANKMX_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{QUESTIONBANK_ID},	
		#{PROBLEM_CAUSE_ANALYSIS},	
		#{DESCRIPTION_TREATMENT_METHOD},	
		#{SHANGGUAN_LIANREN},	
		#{HANDLER},	
		#{PROCESSING_TIME},	
		#{QUESTIONBANKMX_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			QUESTIONBANKMX_ID = #{QUESTIONBANKMX_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			QUESTIONBANK_ID = #{QUESTIONBANK_ID},
			PROBLEM_CAUSE_ANALYSIS = #{PROBLEM_CAUSE_ANALYSIS},
			DESCRIPTION_TREATMENT_METHOD = #{DESCRIPTION_TREATMENT_METHOD},
			SHANGGUAN_LIANREN = #{SHANGGUAN_LIANREN},
			HANDLER = #{HANDLER},
			PROCESSING_TIME = #{PROCESSING_TIME},
			QUESTIONBANKMX_ID = QUESTIONBANKMX_ID
		where 
			QUESTIONBANKMX_ID = #{QUESTIONBANKMX_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.QUESTIONBANKMX_ID = #{QUESTIONBANKMX_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where QUESTIONBANK_ID=#{pd.QUESTIONBANK_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.KEYWORDS}+'%' 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			QUESTIONBANKMX_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>