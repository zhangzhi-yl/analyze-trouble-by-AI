<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.mdmc.EQM_MAINTENANCE_ITEM_WEEKMapper">
	
	<!--表名 -->
	<sql id="tableName">
		MDMC_EQM_MAINTENANCE_ITEM_WEEK
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.FMAINTENANCE_CONTENT,	
		f.FNOTE,	
		f.FCREATOR,	
		f.CREATE_TIME,	
		f.LAST_MODIFIER,	
		f.LAST_MODIFIED_TIME,	
		f.FEXTEND1,	
		f.FEXTEND2,	
		f.FEXTEND3,	
		f.EQM_MAINTENANCE_ITEM_WEEK_ID,
		f.EQM_MAINTENANCE_ITEM_MAIN_ID
	</sql>
	
	<!-- 字段 -->
	<sql id="Field2">
		FMAINTENANCE_CONTENT,	
		FNOTE,	
		FCREATOR,	
		CREATE_TIME,	
		LAST_MODIFIER,	
		LAST_MODIFIED_TIME,	
		FEXTEND1,	
		FEXTEND2,	
		FEXTEND3,	
		EQM_MAINTENANCE_ITEM_WEEK_ID,
		EQM_MAINTENANCE_ITEM_MAIN_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FMAINTENANCE_CONTENT},	
		#{FNOTE},	
		#{FCREATOR},	
		#{CREATE_TIME},	
		#{LAST_MODIFIER},	
		#{LAST_MODIFIED_TIME},	
		#{FEXTEND1},	
		#{FEXTEND2},	
		#{FEXTEND3},	
		#{EQM_MAINTENANCE_ITEM_WEEK_ID},
		#{EQM_MAINTENANCE_ITEM_MAIN_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_MAINTENANCE_ITEM_WEEK_ID = #{EQM_MAINTENANCE_ITEM_WEEK_ID}
	</delete>
	
	<delete id="deleteByFatherID" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_MAINTENANCE_ITEM_MAIN_ID = #{EQM_MAINTENANCE_ITEM_MAIN_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FMAINTENANCE_CONTENT = #{FMAINTENANCE_CONTENT},
			FNOTE = #{FNOTE},
			LAST_MODIFIER = #{LAST_MODIFIER},
			LAST_MODIFIED_TIME = #{LAST_MODIFIED_TIME},
			FEXTEND1 = #{FEXTEND1},
			FEXTEND2 = #{FEXTEND2},
			FEXTEND3 = #{FEXTEND3},
			EQM_MAINTENANCE_ITEM_WEEK_ID = EQM_MAINTENANCE_ITEM_WEEK_ID
		where 
			EQM_MAINTENANCE_ITEM_WEEK_ID = #{EQM_MAINTENANCE_ITEM_WEEK_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_MAINTENANCE_ITEM_WEEK_ID = #{EQM_MAINTENANCE_ITEM_WEEK_ID}
	</select>
	
	<select id="findByFatherId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.EQM_MAINTENANCE_ITEM_MAIN_ID = #{EQM_MAINTENANCE_ITEM_MAIN_ID}
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.EQM_MAINTENANCE_ITEM_MAIN_ID = #{pd.EQM_MAINTENANCE_ITEM_MAIN_ID}
		<if test="pd.KEYWORDS!= null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.FMAINTENANCE_CONTENT LIKE '%'+ #{pd.KEYWORDS}+'%'
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EQM_MAINTENANCE_ITEM_WEEK_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 查询明细总数 -->
	<select id="findCount" parameterType="pd" resultType="pd">
		select
			count(*) zs
		from 
			<include refid="tableName"></include>
		where
			EQM_MAINTENANCE_ITEM_MAIN_ID = #{EQM_MAINTENANCE_ITEM_MAIN_ID}
	</select>
