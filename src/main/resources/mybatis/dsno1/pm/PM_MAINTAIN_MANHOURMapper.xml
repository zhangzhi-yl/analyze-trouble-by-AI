<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.pm.PM_MAINTAIN_MANHOURMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PM_MAINTAIN_MANHOUR
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.PM_MAINTAIN_ID,	
		f.DEPARTMENT_ID,	
		f.STAFF_ID,	
		f.MANHOUR_TYPE,	
		f.DESCRIBE,	
		f.ACTUAL_START_TIME,	
		f.ACTUAL_END_TIME,	
		f.ACTUAL_MANHOUR,	
		f.RESERVE_ONE,	
		f.RESERVE_TWO,	
		f.RESERVE_THREE,	
		f.PM_MAINTAIN_MANHOUR_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		PM_MAINTAIN_ID,	
		DEPARTMENT_ID,	
		STAFF_ID,	
		MANHOUR_TYPE,	
		DESCRIBE,	
		ACTUAL_START_TIME,	
		ACTUAL_END_TIME,	
		ACTUAL_MANHOUR,	
		RESERVE_ONE,	
		RESERVE_TWO,	
		RESERVE_THREE,	
		PM_MAINTAIN_MANHOUR_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PM_MAINTAIN_ID},	
		#{DEPARTMENT_ID},	
		#{STAFF_ID},	
		#{MANHOUR_TYPE},	
		#{DESCRIBE},	
		#{ACTUAL_START_TIME},	
		#{ACTUAL_END_TIME},	
		#{ACTUAL_MANHOUR},	
		#{RESERVE_ONE},	
		#{RESERVE_TWO},	
		#{RESERVE_THREE},	
		#{PM_MAINTAIN_MANHOUR_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PM_MAINTAIN_MANHOUR_ID = #{PM_MAINTAIN_MANHOUR_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DEPARTMENT_ID = #{DEPARTMENT_ID},
			STAFF_ID = #{STAFF_ID},
			MANHOUR_TYPE = #{MANHOUR_TYPE},
			DESCRIBE = #{DESCRIBE},
			ACTUAL_START_TIME = #{ACTUAL_START_TIME},
			ACTUAL_END_TIME = #{ACTUAL_END_TIME},
			ACTUAL_MANHOUR = #{ACTUAL_MANHOUR},
			RESERVE_ONE = #{RESERVE_ONE},
			RESERVE_TWO = #{RESERVE_TWO},
			RESERVE_THREE = #{RESERVE_THREE},
			PM_MAINTAIN_MANHOUR_ID = PM_MAINTAIN_MANHOUR_ID
		where 
			PM_MAINTAIN_MANHOUR_ID = #{PM_MAINTAIN_MANHOUR_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.PM_MAINTAIN_MANHOUR_ID = #{PM_MAINTAIN_MANHOUR_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where
			f.PM_MAINTAIN_ID = #{pd.PM_MAINTAIN_ID}
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.MANHOUR_TYPE LIKE '%'+ #{pd.KEYWORDS}+'%'
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PM_MAINTAIN_MANHOUR_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>