<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yy.mapper.dsno1.note.NoteMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_NOTE
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.TITLE,	
		f.CREATOR,	
		f.TIME,	
		f.TYPE,	
		f.APPLY,	
		f.CONTENT,	
		f.NOTE_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		TITLE,	
		CREATOR,	
		TIME,	
		TYPE,	
		APPLY,	
		CONTENT,	
		NOTE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TITLE},	
		#{CREATOR},	
		#{TIME},	
		#{TYPE},	
		#{APPLY},	
		#{CONTENT},	
		#{NOTE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			NOTE_ID = #{NOTE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TITLE = #{TITLE},
			CREATOR = #{CREATOR},
			TIME = #{TIME},
			TYPE = #{TYPE},
			APPLY = #{APPLY},
			CONTENT = #{CONTENT},
			NOTE_ID = NOTE_ID
		where 
			NOTE_ID = #{NOTE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.NOTE_ID = #{NOTE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(

					f.TITLE LIKE '%'+ #{pd.KEYWORDS}+'%'
					 or 
					f.CREATOR LIKE '%'+ #{pd.KEYWORDS}+'%'
				    )


		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			NOTE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- yy356703572qq(彬耶) -->
</mapper>